$TTL <%= @ttl %>
@ IN SOA <%= @soa %>. <%= @_contact %> (
	<%= @serial %>	;Serial
	<%= @refresh %>	;Refresh
	<%= @update_retry %>	;Retry
	<%= @expire %>	;Expire
	<%= @negttl %>	;Negative caching TTL
)

@ IN NS <%= @soa %>.
<% if @nameservers -%>
  <% @nameservers.each do | ns | %>
@ IN NS <%= ns %>.
  <% end -%>
<% end -%>
<% if ! @reverse %>
<%= @soa %>. IN A <%= @soaip %>
<% end %>
